<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="1dp"
        app:contentPaddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <LinearLayout
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. Name" />


                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/ms_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. Name" />




                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C.No" />


                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/ms_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70000007878" />


            </LinearLayout>


            <LinearLayout
                android:background="@color/colorOrangelight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cylinder Count" />


                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/ms_cylinder_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1" />


            </LinearLayout>

            <LinearLayout
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact No :" />


                <TextView
                    android:id="@+id/ms_contact_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 8220183271" />




                <TextView
                    android:textColor="@color/colorRed"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit : " />


                <TextView
                    android:textColor="@color/colorRed"
                    android:id="@+id/ms_amt_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="200" />


            </LinearLayout>







            <TextView
                android:background="@color/colorOrangelight"
                android:layout_gravity="center"
                android:id="@+id/ms_time_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00 || 20 July 20" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorBlack" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WhatsApp" />


                <ImageView
                    android:id="@+id/ms_call"
                    android:layout_marginLeft="5dp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:src="@color/colorBlack"
                    android:text="C. Name" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlack" />


                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call" />


                <ImageView
                    android:id="@+id/ms_msg"
                    android:layout_marginLeft="5dp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@color/colorYellow" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorBlack" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>